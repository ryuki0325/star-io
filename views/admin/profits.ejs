<h2>💰 利益一覧</h2>

<form method="get" class="mb-3">
  <input type="date" name="start" value="<%= start %>"> 〜 
  <input type="date" name="end" value="<%= end %>">
  <input type="text" name="search" placeholder="ユーザー・サービス検索" value="<%= search %>">
  <button type="submit" class="btn btn-primary btn-sm">絞り込み</button>
</form>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>ID</th><th>顧客</th><th>サービス</th>
      <th>販売価格</th><th>SMM価格</th><th>利益</th><th>注文日</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td><%= o.id %></td>
        <td><%= o.customer_name %></td>
        <td><%= o.service_name %></td>
        <td><%= o.price_site %>円</td>
        <td><%= o.price_smm %>円</td>
        <td><%= o.profit %>円</td>
        <td><%= o.created_at %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<h4 class="mt-3 text-end">合計利益: <%= totalProfit %> 円</h4>
