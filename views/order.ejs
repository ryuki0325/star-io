    serviceSelect.innerHTML = "<option value=''>ã‚µãƒ¼ãƒ“ã‚¹ã‚’é¸ã‚“ã§ãã ã•ã„</option>";

    if (!app || !type || !grouped[app][type]) return;

    grouped[app][type].forEach(service => {
