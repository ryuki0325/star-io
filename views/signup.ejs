<% title = '新規登録' %>

<div class="container py-5 text-light">
  <h2>新規登録</h2>

  <% if (error) { %>
    <p class="text-danger"><%= error %></p>
  <% } %>

  <form method="POST" action="/signup" class="bg-dark p-4 rounded border border-secondary">
    <input type="email" name="email" class="form-control mb-3" placeholder="メールアドレス" required>
    <input type="password" name="password" class="form-control mb-3" placeholder="パスワード" required>
    <button type="submit" class="btn btn-primary w-100">登録</button>
  </form>

  <p class="mt-3">
    すでにアカウントをお持ちですか？
    <a href="/login" class="text-info">ログインはこちら</a>
  </p>

<input type="hidden" name="ref" value="<%= ref || '' %>">
</div>
