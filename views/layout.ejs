<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - $tar.io</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
  /* 🎨 サイドバーの基本スタイル */
#sidebar {
  width: 220px;
  min-height: 100vh;
  background-color: #000; /* 背景色: 黒 */
  transition: transform 0.3s ease, margin-left 0.3s ease;
}

/* サイドバーを閉じたとき */
#sidebar.closed {
  transform: translateX(-220px); /* 左にスライドして非表示 */
}

/* 📱 スマホ対応 */
@media (max-width: 768px) {
  #sidebar {
    position: absolute;  /* サイドバーを画面に重ねる */
    top: 0;
    left: 0;
    z-index: 1000;
    height: 100%;
  }

  #sidebar.closed {
    transform: translateX(-220px); /* 非表示アニメーション */
  }

  /* メインコンテンツの余白を調整 */
  .flex-grow-1 {
    margin-left: 0 !important; /* サイドバー閉じたら余白ゼロ */
  }
}

/* 💻 PC用: サイドバーを固定表示 */
@media (min-width: 769px) {
  .flex-grow-1 {
    margin-left: 220px; /* サイドバー分だけ右に寄せる */
  }

  #sidebar.closed {
    transform: translateX(0); /* PCでは閉じない仕様 */
  }
}
</style>
</head>
<body class="bg-dark text-light">

  <!-- ✅ 開閉ボタン -->
  <button id="menu-toggle" class="btn btn-dark m-2" onclick="toggleSidebar()">☰</button>

  <div class="d-flex">
    <!-- ✅ サイドバー -->
    <div id="sidebar" class="bg-black p-3 border-end" style="width:200px; min-height:100vh;">
      <!-- サイト名＋アイコン -->
      <h4 class="text-info mb-4 d-flex align-items-center justify-content-center">
        <img src="/images/logo-icon.png" alt="Logo" width="28" height="28" class="me-2">
        $tar.io
      </h4>

      <nav class="nav flex-column">
        <a href="/" class="btn btn-outline-info mb-2">🏠 ホーム</a>
        <a href="/order" class="btn btn-outline-info mb-2">🛒 新規注文</a>
        <a href="/funds" class="btn btn-outline-info mb-2">💰 残高チャージ</a>
        <a href="/mypage" class="btn btn-outline-info mb-2">👤 マイページ</a>
        <a href="/contact" class="btn btn-outline-info mb-2">📩 お問い合わせ</a>
        <a href="/orders" class="btn btn-outline-info mb-2">🧾 注文履歴</a>

        <% if (typeof isStaff !== "undefined" && isStaff) { %>
          <a href="/staff/dashboard" class="btn w-100 fw-bold mb-2"
             style="background:#ffc107; border-color:#ffc107; color:#000;">
            🛠️ スタッフ専用ページ
          </a>
        <% } %>

        <% if (user) { %>
          <a href="/logout" class="btn btn-outline-danger mt-3">🚪 ログアウト</a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-light mt-3">ログイン</a>
          <a href="/signup" class="btn btn-outline-light mt-2">新規登録</a>
        <% } %>
      </nav>

      <li class="nav-item mt-3">
        <a href="/terms" class="btn btn-outline-info w-100">📜 利用規約 & SNS</a>
      </li>

      <% if (user) { %>
        <div class="card bg-dark border-info text-info p-2 mt-4">
          <p class="mb-0">現在の残高</p>
          <p class="fw-bold mb-0"><%= Number(user.balance).toFixed(2) %> 円</p>
        </div>
      <% } %>
    </div>

    <!-- ✅ メインコンテンツ -->
    <div class="flex-grow-1 p-4 container" style="max-width: 900px;">
  <%- body %>
</div>
  </div>

  <!-- ✅ 開閉用スクリプト -->
<script>
  const sidebar = document.getElementById('sidebar');
  const toggleBtn = document.getElementById('menu-toggle');

  // ✅ ページ読み込み時に前回の状態を反映
  if (localStorage.getItem('sidebar') === 'hidden') {
    sidebar.classList.add('hidden');
  }

  // ✅ トグルボタン押下時に状態を切り替え
  toggleBtn.addEventListener('click', () => {
    sidebar.classList.toggle('hidden');

    // ✅ 状態を保存
    if (sidebar.classList.contains('hidden')) {
      localStorage.setItem('sidebar', 'hidden');
    } else {
      localStorage.setItem('sidebar', 'shown');
    }
  });
</script>
</body>
</html>
