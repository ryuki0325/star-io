<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - $tar.io</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* サイドバーの開閉アニメーション */
    #sidebar {
      transition: transform 0.3s ease;
    }
    #sidebar.closed {
      transform: translateX(-220px); /* 左に隠れる */
    }
  </style>
</head>
<body class="bg-dark text-light">

  <!-- ✅ 開閉ボタン -->
  <button id="menu-toggle" class="btn btn-dark m-2">☰</button>

  <div class="d-flex">
    <!-- ✅ サイドバー -->
    <div id="sidebar" class="bg-black p-3 border-end" style="width:200px; min-height:100vh;">
      <!-- サイト名＋アイコン -->
      <h4 class="text-info mb-4 d-flex align-items-center justify-content-center">
        <img src="/images/logo-icon.png" alt="Logo" width="28" height="28" class="me-2">
        $tar.io
      </h4>

      <nav class="nav flex-column">
        <a href="/" class="btn btn-outline-info mb-2">🏠 ホーム</a>
        <a href="/order" class="btn btn-outline-info mb-2">🛒 新規注文</a>
        <a href="/funds" class="btn btn-outline-info mb-2">💰 残高チャージ</a>
        <a href="/mypage" class="btn btn-outline-info mb-2">👤 マイページ</a>
        <a href="/contact" class="btn btn-outline-info mb-2">📩 お問い合わせ</a>
        <a href="/orders" class="btn btn-outline-info mb-2">🧾 注文履歴</a>

        <% if (typeof isStaff !== "undefined" && isStaff) { %>
          <!-- ★ 管理者だけに表示されるボタン -->
          <a href="/staff/dashboard" class="btn w-100 fw-bold mb-2"
             style="background:#ffc107; border-color:#ffc107; color:#000;">
            🛠️ スタッフ専用ページ
          </a>
        <% } %>

        <% if (user) { %>
          <a href="/logout" class="btn btn-outline-danger mt-3">🚪 ログアウト</a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-light mt-3">ログイン</a>
          <a href="/signup" class="btn btn-outline-light mt-2">新規登録</a>
        <% } %>
      </nav>

      <li class="nav-item mt-3">
        <a href="/terms" class="btn btn-outline-info w-100">📜 利用規約 & SNS</a>
      </li>

      <!-- ✅ 残高表示 -->
      <% if (user) { %>
        <div class="card bg-dark border-info text-info p-2 mt-4">
          <p class="mb-0">現在の残高</p>
          <p class="fw-bold mb-0"><%= Number(user.balance).toFixed(2) %> 円</p>
        </div>
      <% } %>
    </div>

    <!-- ✅ メインコンテンツ -->
    <div class="flex-grow-1 p-4">
      <%- body %>
    </div>
  </div>

  <!-- ✅ 開閉用スクリプト -->
  <script>
    document.getElementById("menu-toggle").addEventListener("click", () => {
      document.getElementById("sidebar").classList.toggle("closed");
    });
  </script>
</body>
</html>
