<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - $tar.io</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
html, body {
  height: 100%;
  margin: 0;
}

/* 🎨 サイドバーの基本スタイル */
#sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 220px;
  height: 100vh;             /* 通常ブラウザ用 */
  height: calc(var(--vh, 1vh) * 100); /* iPhone Safari 用 */
  background-color: #000;
  transition: transform 0.3s ease;
  overflow-y: auto;
  z-index: 1000;
}

/* サイドバーを閉じたとき（スマホ用） */
#sidebar.closed {
  transform: translateX(-220px);
}

/* 📱 スマホ対応 */
@media (max-width: 768px) {
  #sidebar {
    position: absolute;      
    height: calc(var(--vh, 1vh) * 100); /* iPhoneでも全画面高さを確保 */
  }

  #sidebar.closed {
    transform: translateX(-220px);
  }

  .flex-grow-1 {
    margin-left: 0 !important;
  }
}

/* 💻 PC用 */
@media (min-width: 769px) {
  .flex-grow-1 {
    margin-left: 220px;    /* サイドバー分の余白 */
  }

  #sidebar.closed {
    transform: translateX(0); /* PCでは閉じない */
  }
}
</style>
</head>
<body class="bg-dark text-light">

 <!-- ✅ 開閉ボタン -->
<button id="menu-toggle" class="btn btn-dark"
        style="position: fixed; top: 10px; left: 10px; z-index: 1100;">
  ☰
</button>
  <div class="d-flex">

 <!-- ✅ サイドバー -->
<div id="sidebar" class="bg-black p-3 border-end">

  <!-- 小さな「閉じる」リンク -->
  <small id="close-sidebar" class="text-white" 
         style="cursor:pointer; display:block; text-align:right; margin-bottom:8px;">
    閉じる ✖
  </small>

  <!-- サイト名＋アイコン -->
  <h4 class="text-info mb-4 d-flex align-items-center justify-content-center">
    <img src="/images/logo-icon.png" alt="Logo" width="28" height="28" class="me-2">
    $tar.io
  </h4>

  <nav class="nav flex-column">
    <a href="/" class="btn btn-outline-info mb-2">🏠 ホーム</a>
    <a href="/order" class="btn btn-outline-info mb-2">🛒 新規注文</a>
    <a href="/funds" class="btn btn-outline-info mb-2">💰 残高チャージ</a>
    <a href="/mypage" class="btn btn-outline-info mb-2">👤 マイページ</a>
    <a href="/contact" class="btn btn-outline-info mb-2">📩 お問い合わせ</a>
    <a href="/orders" class="btn btn-outline-info mb-2">🧾 注文履歴</a>

    <% if (typeof isStaff !== "undefined" && isStaff) { %>
      <a href="/staff/dashboard" class="btn w-100 fw-bold mb-2"
         style="background:#ffc107; border-color:#ffc107; color:#000;">
        🛠️ スタッフ専用ページ
      </a>
    <% } %>

    <% if (user) { %>
      <a href="/logout" class="btn btn-outline-danger mt-3">🚪 ログアウト</a>
    <% } else { %>
      <a href="/login" class="btn btn-outline-light mt-3">ログイン</a>
      <a href="/signup" class="btn btn-outline-light mt-2">新規登録</a>
    <% } %>
  </nav>

  <div class="mt-3">
    <a href="/terms" class="btn btn-outline-info w-100">📜 利用規約 & SNS</a>
  </div>

  <% if (user) { %>
    <div class="card bg-dark border-info text-info p-2 mt-4">
      <p class="mb-0">現在の残高</p>
      <p class="fw-bold mb-0"><%= Number(user.balance).toFixed(2) %> 円</p>
    </div>
  <% } %>
</div>

<!-- ✅ メインコンテンツ -->
<div class="flex-grow-1 p-4 container" style="max-width: 900px;">
  <%- body %>
</div>
</div>

<!-- ✅ 開閉用スクリプト -->
<script>
  // iPhone Safari の 100vh 問題対応
  function updateVH() {
    const vh = window.innerHeight * 0.01;
    document.documentElement.style.setProperty('--vh', `${vh}px`);
  }
  updateVH();
  window.addEventListener('resize', updateVH);
  window.addEventListener('orientationchange', updateVH);

  const sidebar = document.getElementById("sidebar");
  const toggleBtn = document.getElementById("menu-toggle");

  if (localStorage.getItem("sidebar") === "closed") {
    sidebar.classList.add("closed");
  }

  toggleBtn.addEventListener("click", () => {
    sidebar.classList.toggle("closed");
    localStorage.setItem("sidebar", sidebar.classList.contains("closed") ? "closed" : "open");
  });

  const closeBtn = document.getElementById("close-sidebar");
  if (closeBtn) {
    closeBtn.addEventListener("click", () => {
      sidebar.classList.add("closed");
      localStorage.setItem("sidebar", "closed");
    });
  }
</script>
</body>
</html>
