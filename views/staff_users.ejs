<% title = 'ユーザー管理' %>
<div class="container py-4 text-light">
  <h2>👥 ユーザー管理</h2>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>残高</th>
        <th>登録日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.email %></td>
          <td><%= u.balance %> 円</td>
          <td><%= u.created_at %></td>
          <td>
            <a href="/staff/user/<%= u.id %>/edit" class="btn btn-sm btn-info">編集</a>
            <a href="/staff/user/<%= u.id %>/orders" class="btn btn-sm btn-warning">履歴</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

