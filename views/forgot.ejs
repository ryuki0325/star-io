<% title = 'パスワードリセット' %>

<div class="container py-4 text-light">
  <h2 class="mb-4">🔑 パスワードリセット</h2>

  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/forgot" method="POST" class="bg-dark p-4 rounded border border-info">
    <div class="mb-3">
      <label for="email" class="form-label">登録メールアドレス</label>
      <input type="email" id="email" name="email" class="form-control bg-dark text-light border-info" required>
    </div>
    <button type="submit" class="btn btn-info w-100">リセットリンクを送信</button>
  </form>
</div>