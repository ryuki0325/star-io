<% title = '利益一覧' %>
<div class="container py-4 text-light">

  <h2 class="mb-4">💹 利益一覧</h2>

  <form method="get" class="mb-4 row g-2">
    <div class="col-md-2">
      <label>開始日</label>
      <input type="date" name="start" class="form-control" value="<%= start || '' %>">
    </div>
    <div class="col-md-2">
      <label>終了日</label>
      <input type="date" name="end" class="form-control" value="<%= end || '' %>">
    </div>
    <div class="col-md-2">
      <label>商品</label>
      <select name="platform" class="form-select">
        <option value="all">全て</option>
        <option value="TikTok" <%= platform==='TikTok'?'selected':'' %>>TikTok</option>
        <option value="Instagram" <%= platform==='Instagram'?'selected':'' %>>Instagram</option>
        <option value="Twitter" <%= platform==='Twitter'?'selected':'' %>>Twitter</option>
        <option value="YouTube" <%= platform==='YouTube'?'selected':'' %>>YouTube</option>
      </select>
    </div>
    <div class="col-md-3">
      <label>ユーザー検索</label>
      <input type="text" name="user_search" class="form-control" placeholder="ID or Email" value="<%= user_search || '' %>">
    </div>
    <div class="col-md-2 align-self-end">
      <button class="btn btn-primary w-100">絞り込み</button>
    </div>
  </form>

  <table class="table table-dark table-striped table-bordered text-center">
    <thead>
      <tr>
        <th>ID</th>
        <th>ユーザーID</th>
        <th>サービス名</th>
        <th>数量</th>
        <th>販売価格(円)</th>
        <th>仕入れ価格($)</th>
        <th>仕入れ価格(円)</th>
        <th>利益(円)</th>
        <th>日付</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(o => { %>
        <tr>
          <td><%= o.id %></td>
          <td><%= o.user_id %></td>
          <td><%= o.service_name %></td>
          <td><%= o.quantity %></td>
          <td><%= o.price_jpy %></td>
          <td><%= o.smm_cost_usd %>$</td>
          <td><%= o.smm_cost_jpy %></td>
          <td class="fw-bold text-success"><%= o.profit %></td>
          <td><%= new Date(o.created_at).toLocaleString('ja-JP') %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h4 class="text-end mt-3">
    💰 合計利益：<span class="text-warning fw-bold"><%= totalProfit %> 円</span>
  </h4>

</div>
