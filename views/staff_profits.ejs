<h2>💰 利益集計</h2>

<form method="get" class="mb-3">
  <input type="date" name="start" value="<%= start || '' %>"> 〜
  <input type="date" name="end" value="<%= end || '' %>">
  <input type="text" name="search" placeholder="メール or サービス名" value="<%= search || '' %>">
  <button class="btn btn-primary btn-sm">絞り込み</button>
</form>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>顧客メール</th>
      <th>サービス</th>
      <th>販売価格</th>
      <th>仕入れ価格</th>
      <th>利益</th>
      <th>注文日</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td><%= o.id %></td>
        <td><%= o.customer_email %></td>
        <td><%= o.service_name %></td>
        <td><%= o.site_price %>円</td>
        <td><%= o.smm_price %>円</td>
        <td><%= o.profit %>円</td>
        <td><%= new Date(o.created_at).toLocaleString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<h4 class="mt-3 text-end">合計利益: <%= totalProfit %> 円</h4>
