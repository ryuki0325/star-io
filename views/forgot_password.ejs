<h2>パスワードをお忘れの方</h2>
<form action="/forgot-password" method="POST">
  <input type="email" name="email" placeholder="登録メールアドレス" required>
  <button type="submit">送信</button>
</form>
<% if (error) { %><p style="color:red"><%= error %></p><% } %>
<% if (success) { %><p style="color:green"><%= success %></p><% } %>